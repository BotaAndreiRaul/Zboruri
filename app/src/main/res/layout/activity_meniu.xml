<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MeniuActivity">

  <Button
      android:id="@+id/buttonViewUser"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="284dp"
      android:text="View Users"
      app:layout_constraintEnd_toStartOf="@+id/buttonAddUser"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/buttonAddUser"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="284dp"
      android:text="Add User"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/buttonViewUser"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/buttonViewFlights"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="View Flights"
      app:layout_constraintEnd_toStartOf="@+id/buttonAddFlight"
      app:layout_constraintHorizontal_bias="0.345"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonViewUser" />

  <Button
      android:id="@+id/buttonAddFlight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Add Flight"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/buttonViewFlights"
      app:layout_constraintTop_toBottomOf="@+id/buttonAddUser" />
</androidx.constraintlayout.widget.ConstraintLayout>